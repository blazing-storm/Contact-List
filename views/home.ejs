<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>
        <%= title %>
    </title>

    <script src="https://kit.fontawesome.com/7d41a86f63.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css">
  </head>

  <body>
    <div class="container">
        <div id="search-bar">
            <input type="text" name="name" placeholder="Search...">
            <a class="btn btn-primary" href="/new" role="button">New Contact</a>
        </div>
        <div id="contact-table">
            <caption>My Contact List</caption>
            <table class="table table-hover">
                <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Name</th>
                      <th scope="col">Phone</th>
                      <th scope="col">Email</th>
                      <th scope="col">Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let i = 0; i < contact_list.length; i++) { %>
                        <tr>
                            <th scope="row"> <p> <%= i + 1 %> </p> </th>
                            <td> <p> <%= contact_list[i].name %> </p> </td>
                            <td> <p> <%= contact_list[i].phone %> </p> </td>
                            <td> <p> <%= contact_list[i].email %> </p> </td>
                            <td>
                                <a href="/delete-contact/?id=<%= contact_list[i]._id %>">
                                    <i class="fas fa-user-times"></i>
                                </a>
                            </td>
                        </tr>
                    <% } %>
                  </tbody>
            </table>
        </div>
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script type="text/javascript" src="/js/home.js"></script>
  </body>
</html>

